{
  "name": "email-summarizer-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:replit": "npm run build && node dist/index.js",
    "postinstall": "node scripts/create-ajv-shims.cjs",
    "db:generate": "DOTENV_CONFIG_PATH=.env node -r dotenv/config node_modules/.bin/drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/error": "^3.0.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fast-json-stringify": "^5.16.1",
    "fastify": "^4.24.3",
    "openai": "^4.20.1",
    "pdf-parse": "^2.4.5",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "drizzle-kit": "^0.20.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
