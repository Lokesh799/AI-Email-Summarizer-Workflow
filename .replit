modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build && cd ../backend && npm install && npm run build && NODE_ENV=production REPLIT=true node dist/index.js"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd frontend && npm install && npm run build && cd ../backend && npm install && npm run build && NODE_ENV=production REPLIT=true node dist/index.js"]
build = ["npm", "run", "build"]

[env]
NODE_ENV = "production"
REPLIT = "true"
