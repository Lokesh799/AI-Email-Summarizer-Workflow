{
  "name": "captivix-ai-email-summarizer",
  "version": "1.0.0",
  "description": "AI-powered email summarization workflow automation",
  "private": true,
  "engines": {
    "node": ">=20.16.0",
    "npm": ">=10.0.0"
  },
   "overrides": {
    "ajv": "6.12.6"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
 "scripts": {
  "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
  "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
  "start:railway": "node backend/dist/index.js"
},
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
